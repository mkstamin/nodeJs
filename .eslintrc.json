{
  "extends": ["prettier", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "env": {
    "commonjs": true,
    "node": true
  },
  "rules": {
    "no-console": 0,
    "comma-dangle": 0,
    // "comma-dangle": ["error", "only-multiline"],
    // "func-names": ["error", "as-needed"],
    "implicit-arrow-linebreak": 0,
    "object-curly-newline": 0,
    "no-underscore-dangle": 0,
    "consistent-return": 0,
    "indent": 0,
    "linebreak-style": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "semi": true,
        "endOfLine": "auto"
      }
    ]
  },
  "plugins": ["prettier"]
}
